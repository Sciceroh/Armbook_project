class Armbook:
import psycopg2

    def __init__(self):
        self.conexao = psycopg2.connect()
        self.usuarios = []
        self.logado = self.logon()
        self.tela()
    
    def cadastra_usuario(self):
        #login = self.nome.get()
        senha = input("Senha: ")
        nome = input("Nome: ")
        email = input("Email: ")
        idade = input("Idade: "

        cursor = self.conexao.cursor()
        cursor.execute(
            'INSERT INTO usuario(senha, nome, email, idade) VALUES (%s, %s, %s, %s,)',
            (senha, nome, email, idade)
        )
        cursor.close()
        self.conexao.commit()

    usuario = Usuario(senha, nome, idade, email)
    self.usuarios.append(usuario)
    return usuario

    def deleta_usuario(self):
        #self.nome.remove()
        #self.email.remove()
        #self.idade.remove()
        #self.usuario.remove(self.logado)
        cursor = self.conexao.cursor()
        cursor.execute('DELETE FROM usuario WHERE email=\'{}\''.format(self.logado.email))
        cursor.close()
        exit()


    def listar_usuario(self):
        print(usuario)

    def login(self):
        conta = int(input("Deseja Fazer login na sua conta? | 1 para Sim, 2 para Não, e 3 para não tenho:"))
        if conta == 1:
            while True:
                email = input("Digite aqui seu Email:")
                senha = input("Digite aqui sua conta:")

                cursor = self.conexao.cursor()
                cursor.execute('SELECT * from usuario where email=\'{}\''.format(email))
                tupla = cursor.fetchone()
                cursor.close()

        elif conta == 2:
            exit()
        else:
            return self.cadastra_usuario()

        return self.login

    def deslogar(self):
        self.usuario_logado = self.login()

    def Meny(self):
        Menu = input("Escolha uma opção: 1 Para Atualizar Usuário | 2 Para Listar Usuário | 3 Para Deletar Usuário | 4 Não fazer nada")
        if menu == 1:
            Nova_senha = input("Digite nova senha")
            Novo_nome = input("Digite novo nome")
            Novo_Email = input("Digte novo email")
            Novo_Idade = input("Digite nova idade")

        return self.cadastra_usuario()

        elif menu == 2:
            return self.listar_usuario()
        elif menu == 3:
            return self.deleta_usuario()
        else:
            print ("Você não fez nada")

    def get_senha(self):
        return self.senha

    def get_nome(self):
        return self.nome

    def get_idade(self):
        return self.idade

    def get_email(self):
        return self.email

    def get_profissao(self):
        return self.profissao
